}

\newtcbinputlisting{\tcbinputcode}[2]{
    listing only, listing engine=minted,
    enhanced jigsaw, breakable, colback=clrcodeback, boxsep=0pt, colframe=clrcodeframe, top=5pt, bottom=5pt, left=8mm, right=2mm, boxrule=2pt, title={\hspace*{-6mm}\itshape Code},
    minted options={linenos,autogobble,breaklines, numbersep=3mm, obeytabs, tabsize=4,fontsize=\fontsize{8}{8}},
    minted language=#1, listing file=#2
}

